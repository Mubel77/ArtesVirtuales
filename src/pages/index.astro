---
import Distributor from "@/components/Distrubution"
import Team from "@/components/Team"
import Testimonials from "@/components/Testimonials"
import { WhyChooseUs } from "@/components/WhyChoose"
import Services from "@/components/Services"
import Hero from "@/components/Hero.astro"
import Header from "@/components/Header"
import Footer from "@/components/Footer"
import WhatsappButton from '@/components/WhatsappButton'

import data from '@data'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/ico" href="/ArtesVirtualesLogos/favicon.io" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Artes Virtuales</title>
	</head>
	<body >
    <Header dataHeader={data.header} client:idle />
    <Hero 
      title={data.hero.titulo} 
      description={data.hero.descripcionDelHero}
      whatsapp={data.redesSociales.whatsapp} 
    />
    <Services dataService={data.nuestrosServicios} />
    <WhyChooseUs title={data.porqueElegirnos.titulo} reasons={data.porqueElegirnos.razones} />
		<Distributor dataDistributor={data.distribuidoras} />
    <Testimonials title={data.testimonios.titulo} testimonials={data.testimonios.testimonios} />
    <Team dataTeam={data.nuestroEquipo} client:idle />
    <Footer redesSociales={data.redesSociales} />
    <WhatsappButton whatsapp={data.redesSociales.whatsapp} />
	</body>
</html>


<style>
  *{
    scroll-behavior: smooth;
  }
</style>
